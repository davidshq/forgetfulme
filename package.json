{
  "name": "forgetfulme-extension",
  "version": "0.0.1",
  "description": "ForgetfulMe Chrome Extension with Playwright Integration Tests",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "install-browsers": "playwright install chromium",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check",
    "compare-branches": "node scripts/compare-branches.js",
    "compare-branches:detailed": "node scripts/compare-branches.js --detailed",
    "compare-branches:save": "node scripts/compare-branches.js --detailed --save"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
