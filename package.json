{
  "name": "forgetfulme-extension",
  "version": "0.0.1",
  "description": "ForgetfulMe Chrome Extension with Playwright Integration Tests",
  "type": "module",
  "scripts": {
    "test": "vitest --config config/vitest.config.js",
    "test:unit": "vitest --config config/vitest.config.js",
    "test:unit:ui": "vitest --config config/vitest.config.js --ui",
    "test:unit:coverage": "vitest --config config/vitest.config.js --coverage",
    "test:integration": "playwright test --config config/playwright.config.js --project=component-integration",
    "test:integration:headed": "playwright test --config config/playwright.config.js --project=component-integration --headed",
    "test:integration:ui": "playwright test --config config/playwright.config.js --project=component-integration --ui",
    "test:e2e": "playwright test --config config/playwright.config.js --project=extension-e2e",
    "test:e2e:headed": "playwright test --config config/playwright.config.js --project=extension-e2e --headed",
    "test:e2e:debug": "playwright test --config config/playwright.config.js --project=extension-e2e --debug",
    "test:e2e:ui": "playwright test --config config/playwright.config.js --project=extension-e2e --ui",
    "test:playwright": "playwright test --config config/playwright.config.js",
    "test:playwright:headed": "playwright test --config config/playwright.config.js --headed",
    "test:playwright:debug": "playwright test --config config/playwright.config.js --debug",
    "test:playwright:ui": "playwright test --config config/playwright.config.js --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:quick": "npm run test:unit && npm run test:integration",
    "install-browsers": "playwright install chromium",
    "lint": "eslint --config config/eslint.config.js .",
    "lint:fix": "eslint --config config/eslint.config.js . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.0",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
