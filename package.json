{
  "name": "forgetfulme",
  "version": "1.0.0",
  "description": "Chrome extension to track websites you've read",
  "type": "module",
  "scripts": {
    "test": "vitest --run",
    "test:quick": "vitest --run --testTimeout=2000 --hookTimeout=2000 --bail=1",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --run --coverage",
    "test:playwright": "playwright test",
    "test:playwright:ci": "CI=1 playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:visual:simple": "playwright test tests/visual/simple-visual.test.js",
    "test:all": "npm test && npm run test:playwright && npm run test:visual",
    "install-browsers": "playwright install chromium",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css,json}\"",
    "check": "npm run lint && npm run format:check",
    "check:all": "npm run lint && npm run format:check && npm test && npm run test:unit:coverage",
    "quality": "npm run check:all && npm run test:playwright && npm run test:visual",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "validate": "npm run check && npm test",
    "validate:quick": "npm run check && npm run test:quick",
    "validate:full": "npm run check && npm test && npm run test:visual:simple",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^24.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "ForgetfulMe Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{html,css,json}": [
      "prettier --write"
    ]
  }
}
