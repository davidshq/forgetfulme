{
  "quality": {
    "coverage": {
      "minimum": 68.0,
      "target": 75.0,
      "branches": 65.0,
      "functions": 70.0,
      "lines": 70.0,
      "statements": 70.0
    },
    "linting": {
      "maxWarnings": 5,
      "maxErrors": 0
    },
    "complexity": {
      "maxCyclomaticComplexity": 10,
      "maxFunctionLength": 50,
      "maxFileLength": 300
    },
    "performance": {
      "maxBundleSize": "500KB",
      "maxRenderTime": "100ms",
      "maxTestDuration": "30s"
    },
    "security": {
      "allowedVulnerabilities": {
        "low": 5,
        "moderate": 2,
        "high": 0,
        "critical": 0
      }
    }
  },
  "gates": {
    "pre-commit": [
      "lint-staged",
      "unit-tests",
      "coverage-check"
    ],
    "pre-push": [
      "full-lint",
      "all-tests",
      "security-audit"
    ],
    "ci": [
      "lint",
      "format-check",
      "unit-tests",
      "integration-tests",
      "visual-tests",
      "security-audit",
      "coverage-report"
    ]
  },
  "notifications": {
    "onFailure": ["console", "summary"],
    "onSuccess": ["console"],
    "coverage": {
      "threshold": true,
      "regression": true
    }
  }
}